<Application x:Class="ScreenOverlayManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="View/OverlayView.xaml">
             <!--StartupUri="View/EditOverlayView.xaml">-->
    <Application.Resources>        
        <ResourceDictionary
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:tb="http://www.hardcodet.net/taskbar">

            <ContextMenu x:Key="SysTrayMenu">
                <MenuItem Header="Hide all overlays"/>
                <MenuItem Header="Show all overlays"/>
                <Separator />
                <MenuItem Header="Edit overlays..."/>
                <Separator />
                <MenuItem Header="Exit"/>
            </ContextMenu>

            <tb:TaskbarIcon x:Key="TrayIcon"
                            IconSource="img/icon.ico"
                            ToolTipText="Overlay Manager"
                            ContextMenu="{StaticResource SysTrayMenu}">
            </tb:TaskbarIcon>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
